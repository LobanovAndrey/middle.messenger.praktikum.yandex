<input
  {{#with styles}}
    class="{{#if disabled}}disabled{{/if}}"
  {{/with}}
  {{#if placeholder}} placeholder="{{placeholder}}" {{/if}}
  {{#if type}} type="{{type}}" {{else}}type="text" {{/if}}
  {{#if id}} id="{{id}}" {{/if}}
  {{#if name}} name="{{name}}" {{/if}}
  {{#if value}} value="{{value}}" {{/if}}
  autocomplete="off"
/>